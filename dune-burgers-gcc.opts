# use these options for configure if no options a provided on the cmdline
CONFIGURE_FLAGS="
 CC=gcc \
 CXX=g++
 CXXFLAGS='-fPIC -O2 -fno-strict-aliasing -g3 -ggdb -std=c++0x -Wall'
 --with-alugrid=../alugrid
 --enable-fieldvector-size-is-method
 --enable-superlu
 --enable-shared
 --disable-parallel
 --enable-parmetis
"
